<%= simple_form_for(@job) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :title, placeholder: "Job Title, e.g. Front-end developer", label: false, autofocus: true %>
    <%= f.input :description, placeholder: "Short job description...", label: false %>
    <%= f.input :category %>
    <%= f.input :address, placeholder: "Company Address, e.g. 7225 Acorn Avenue, Burnaby BC, V5E 0A9", label: false %>
    <%= f.input :how_to_apply, placeholder: "How to Apply, e.g. Send a resume to jane@company.com", label: false %>
    <%= f.input :company_name, placeholder: "Company Name", label: false %>
    <%= f.input :website, placeholder: "Company Website", label: false %>
    <%= f.input :email, placeholder: "Contact Email", label: false %>
    <%= f.input :experience, placeholder: "Work Experience, e.g. 5 years", label: false %>
    <%= f.input :working_hours, placeholder: "Working Hours, e.g. 40", label: false %>
    <%= f.input :compensation, placeholder: "Compensation, e.g. $20/hour", label: false %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, class: "btn btn-success" %>
  </div>
<% end %>
