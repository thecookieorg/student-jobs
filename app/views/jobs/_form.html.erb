<%= simple_form_for(@job) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :title %>
    <%= f.input :description %>
    <%= f.input :category %>
    <%= f.input :address %>
    <%= f.input :how_to_apply %>
    <%= f.input :company_name %>
    <%= f.input :website %>
    <%= f.input :email %>
    <%= f.input :experience %>
    <%= f.input :working_hours %>
    <%= f.input :compensation %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
